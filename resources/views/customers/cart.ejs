
<section class="cart py-16">
    <% if(session.cart){ %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>

    <div class="pizza-list">
        <%for(let pizza of Object.values(session.cart.items)) { %>
        <div class="flex items-center my-8">
        <img class="w-24" src="/img/<%=pizza.item.image %>">
         <div class="flex-1 ml-4"> 
             <h1 ><%=pizza.item.name %></h1>
             <span><%=pizza.item.size %></span>
         </div>
         <span class="flex-1 ml-4"><%=pizza.qty%> Pcs</span>
         <span class="font-bold text-lg">Rs.<%=pizza.item.price%></span>
        </div>
        <% } %>
    </div>
    <hr>
    <div>
    <div class="text-right py-4">
        <span class="text-lg font-bold">Total Amount: </span>
        <span class="amount text-2xl font-bold ml-2">Rs. <%=session.cart.totalPrice%></span>
    </div>
    <div class="text-right py-4">
        <form action="">
            <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Phone Number">
            <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
            <div>
                <button class="inline block cursor pointer btn-primary px-6 py-2 font-bold rounded-full mt-6" type="submit">Order Now</button>
            </div>
        </form>
      <!-- <div>
          <a href="" class="inline block cursor pointer btn-primary px-6 py-2 font-bold rounded-full">Login to continue</a>
      </div> -->
    </div>
    </div>
</div>

<% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2 mt-2">Cart Empty ðŸ˜”</h1>
        <p>To order a pizza go back to main page.</p>
        <img class="width-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
        </div>
   <% }%>

</section>